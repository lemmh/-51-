#include <REGX52.H>
#include "LCD1602.h"
#include "timer0.h"

unsigned int sec=50,min=59,hour=23;
void main ()
{	
	LCD_Init();
	Timer0_Init();
	LCD_ShowString (1,1,"CLock:");
	LCD_ShowString(2,1,"  :  :");    //这些不放在while循环里，防止来回扫描
	while(1)
	{
		
		LCD_ShowNum (2,1,hour,2);
		LCD_ShowNum (2,4,min,2);
		LCD_ShowNum (2,7,sec,2);
		
		
	}
}

void Timer0_Routine() interrupt 1//对应的工作模式 01 模式一
{	
	static unsigned int Tcount ;  //局部变量且不会销毁
	TL0 = 0x18;				//设置定时初始值
	TH0 = 0xFC;				//设置定时初始值
	Tcount++;
	if(Tcount>=1000)
	{
		Tcount=0;
		sec++;
		if(sec>=60)
		{
			min++;
			sec=0;
			if(min>=60)
			{
				hour++;
				min=0;
				if(hour>=24)
				hour=0;
			}
		}
		
		
	}

}
