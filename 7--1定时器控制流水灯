#include <REGX52.H>
#include "timer0.h"
#include "Key.h"
#include <INTRINS.H>                //包含左右移动循环函数

unsigned char KeyNum,LEDMode;


void main ()
{	
	Timer0_Init();//应用后就开始工作了，即开始计数了
	P2=0xFE;
	while(1)
	{	
		KeyNum=Key();
		if(KeyNum)
		{
			if(KeyNum==1)
			{
				LEDMode++;
				if(LEDMode >= 2)
				LEDMode=0;
			}
			
		}
	}
}

void Timer0_Routine() interrupt 1//对应的工作模式 01 模式一
{	
	static unsigned int Tcount ;  //局部变量且不会销毁
	TL0 = 0x18;				//设置定时初始值
	TH0 = 0xFC;				//设置定时初始值
	Tcount++;
	if(Tcount>=500)
	{
		Tcount=0;
		if(LEDMode==0)
			P2=_crol_(P2,1);
		if(LEDMode==1)
			P2=_cror_(P2,1);
	}

}



定时器配置模版

#include <REGX52.H>
void Timer0_Init()
{
	TMOD &= 0xF0;			//设置定时器模式
	TMOD |= 0x01;			//设置定时器模式
	TL0 = 0x18;				//设置定时初始值
	TH0 = 0xFC;				//设置定时初始值
	TF0 = 0;				//清除TF0标志
	TR0 = 1;				//定时器0开始计时
	ET0=1;//分开关
	EA=1;//总控制开关
	PT0=0;//定时器优先级，0为低（默认），1为高优先级
}
